<%= form_for @profile, url: user_profile_path, html: { multipart: true } do |f| %> <!-- Whenever use single resource in routes.rb  specify url in form_for -->
                
                <div class="form-group">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, autofocus: true, class: "form-control"%>
                </div>
                
                <div class="form-group">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, class: "form-control"%>
                </div>
                
                <div class="form-group">
                    <%= f.label :avatar %><br>
                    <%= f.file_field :avatar, class: "form-control" %>
                 </div>
                
                <div class="form-group">
                    <%= f.label :contact_email %>
                    <%= f.email_field :contact_email, class: "form-control"%>
                </div>
                <div class="form-group">
                    <%= f.label :phone_number %>
                    <%= f.text_field :phone_number, class: "form-control"%>
                </div>
                
                <div class="form-group">
                    <%= f.label :job_title %>
                    <%= f.select :job_title, ['Developer', 'Entrepreneur', 'Investor'], {}, class: "form-control"%>
                </div>
                
                <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, placeholder: "Tell Something about Yourself!", class: "form-control"%>
                </div>
                
                <div class="form-group">
                    <%= f.submit "Update Profile", class: "btn btn-primary" %>
                </div>
            
            <% end %>